@model SignUpViewModel
@{
    Layout = null;
    ViewData["Title"] = "SignUp";
}

<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Hotelier Giriş Paneli</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/assets/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link href="~/adminweb/css/style.css" rel="stylesheet">
</head>

<body class="h-100">

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->

    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container" style="margin-bottom: 50px">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header" style="background-color: bisque">
                                    <h1 class="text-center font-weight-light my-4"><b>Hotelier Giriş Paneli</b></h1>
                                </div>
                                <div style="background-color: azure">
                                    <h4 class="text-center font-weight-light my-4">Yeni Hesap Oluştur</h4>
                                </div>

                              @*  ViewBag ile veri tasima*@
               @*                 @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                                {
                                    <div class="alert alert-success" role="alert">
                                        @ViewBag.SuccessMessage
                                    </div>
                                }*@
                              
                              @*TempData ile veri tasima*@
                              @if (TempData["SuccessMessage"]!=null)
                              {
                                  <div class="alert alert-primary" role="alert">
                                        @TempData["SuccessMessage"]
                                  </div>
                              }

                              <div class="card-body" style="background-color: cornsilk">
                                    <form asp-controller="Register" asp-action="SignUp" method="post" id="form-user-add">
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="FirstName" asp-for="FirstName"></label>
                                                    <input asp-for="FirstName" class="form-control">
                                                     <span class="text-danger" asp-validation-for="FirstName"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="LastName" asp-for="LastName"></label>
                                                    <input asp-for="LastName" class="form-control">
                                                     <span class="text-danger" asp-validation-for="LastName"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                                                <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none"></div>
                                                <div class="form-group">
                                                    <label class="small mb-1" for="Username" asp-for="Username"></label>
                                                    <input asp-for="Username" class="form-control">
                                                    <span class="text-danger" asp-validation-for="Username"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="Email" asp-for="Email"></label>
                                                    <input type="email" asp-for="Email" class="form-control">
                                                    <span class="text-danger" asp-validation-for="Email"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="City" asp-for="City"></label>
                                                    <select class="form-control" asp-for="City" asp-items="@ViewBag.City"></select>
                                                    <span class="text-danger" asp-validation-for="City"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="Gender" asp-for="Gender"></label>
                                                    @* <input class="form-control py-4" id="Gender" type="checkbox" asp-for="Gender" />     *@
                                                    <select class="form-control" asp-for="Gender" asp-items="@ViewBag.Gender"></select>
                                                    <span class="text-danger" asp-validation-for="Gender"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="PhoneNumber" asp-for="PhoneNumber"></label>
                                                    <input type="tel" asp-for="PhoneNumber" class="form-control">
                                                     @*<span class="text-danger" asp-validation-for="PhoneNumber"></span>*@
                                                </div>
                                            </div>

                                        </div>

                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="Password" asp-for="Password"></label>
                                                    <input type="password" asp-for="Password" class="form-control">
                                                     <span class="text-danger" asp-validation-for="Password"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="PasswordConfirm" asp-for="PasswordConfirm"></label>
                                                    <input type="password" asp-for="PasswordConfirm" class="form-control">
                                                     <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                                                </div>
                                            </div>
                                            @*                          <div class="form-group col-md-6">
                                            <label asp-for="ImageFile"></label>
                                            <input type="file" accept="image/*" class="form-control-file" asp-for="ImageFile" placeholder="Lütfen, resim seçiniz."/>
                                            <span class="text-danger" asp-validation-for="ImageFile"></span>
                                            </div>*@
                                        </div>
                                        <div class="form-group mt-6 mb-0">
                                            @*<button type="submit" class="btnRegister">Oluştur</button>*@
                                            <button type="reset" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> Formu Temizle</button>
                                            @*                                          <button type="button" class="btn btn-primary btn-block" id="btnSave"><span class="fas fa-save"></span> Kaydet</button>*@
                                            <button type="submit" class="btn login-form__btn submit btn-block"><span class="fas fa-save"></span>Kayıt Ol</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <p class="mt-2 login-form__footer">Bir hesabınız var mı? <a href="/Login/Index" class="text-primary"><b> Giriş Yap </b></a> şimdi</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>















